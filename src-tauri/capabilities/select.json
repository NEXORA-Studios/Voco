{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "select",
    "description": "Capability for the select window",
    "windows": ["select"],
    "permissions": [
        "opener:default",
        "core:default",
        "dialog:default",
        "dialog:allow-open",
        "core:window:allow-minimize",
        "core:window:allow-toggle-maximize",
        "core:window:allow-is-maximized",
        "core:window:allow-close",
        "core:window:allow-start-dragging",
        "fs:default",
        "fs:allow-create",
        "fs:allow-read",
        "fs:allow-write-file",
        "fs:allow-write-text-file",
        "fs:allow-copy-file",
        "fs:allow-remove",
        {
            "identifier": "fs:scope",
            "allow": [
                { "path": "$APPDATA" },
                { "path": "$APPDATA/**/*" },
                { "path": "$HOME" },
                { "path": "$HOME/**/*" },
                { "path": "*" }
            ]
        }
    ]
}
