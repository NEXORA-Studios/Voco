{
    "$schema": "./gen/schemas/config-schema.json",
    "productName": "Voco",
    "version": "0.1.1",
    "identifier": "io.github.nexora-studios.voco",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Voco",
                "width": 1280,
                "height": 720,
                "minWidth": 1280,
                "minHeight": 720,
                "decorations": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    }
}
